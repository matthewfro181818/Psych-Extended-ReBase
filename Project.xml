<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- _________________________ Application Settings _________________________ -->

	<!-- ___ Build with spesific libraries ___ -->
	<define name="debugBuild" if="termux" />

	<app title="FNF': Psych Extended Rebase" file="PsychEngine" packageName="com.kraloyuncu.psychextendedrebase" package="com.kraloyuncu.psychextendedrebase" main="Main" version="0.2.8" company="KralOyuncu" />

	<section if="debugBuild"> <!-- Seperate debug & github builds -->
		<app title="FNF': Psych Extended Debug" file="PsychEngine" packageName="com.kraloyuncu.psychextendedrebasedebug" package="com.kraloyuncu.psychextendedrebasedebug" main="Main" version="0.2.8" company="KralOyuncu" />
	</section>

	<!--Switch Export with Unique ApplicationID and Icon-->
	<set name="APP_ID" value="0x0100f6c013bbc000" />

	<!-- NOTE TO SELF: DISABLE THIS IF ISSUES ARE FOUND -->
	<haxedef name="LINC_LUA_RELATIVE_DYNAMIC_LIB"/> <!-- stable luas PUT AFTER FIRST LINE WITH APP NAME AND ETC -->

	<!--The flixel preloader is not accurate in Chrome. You can use it regularly if you embed the swf into a html file
		or you can set the actual size of your file manually at "FlxPreloaderBase-onUpdate-bytesTotal"-->
	<!-- <app preloader="Preloader" resizable="true" /> -->
	<app preloader="flixel.system.FlxPreloader" />

	<!--Minimum without FLX_NO_GAMEPAD: 11.8, without FLX_NO_NATIVE_CURSOR: 11.2-->
	<set name="SWF_VERSION" value="11.8" />

	<!-- ____________________________ Window Settings ___________________________ -->

	<!--These window settings apply to all targets-->
	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" allow-high-dpi="true" />

	<!--HTML5-specific-->
	<window if="html5" resizable="true" />

	<!--Desktop-specific-->
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<!--Mobile-specific-->
	<window if="mobile" orientation="landscape" fullscreen="true" resizable="false" allow-shaders="true" require-shaders="true" />

	<!--Switch-specific-->
	<window if="switch" orientation="landscape" fullscreen="true" width="0" height="0" resizable="true" />

	<!-- _____________________________ Path Settings ____________________________ -->

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bits" />

	<!-- For Termux -->
	<section if="termux">
		<set name="BUILD_DIR" value="/root/PsychExtended/export/debug" if="debug" />
		<set name="BUILD_DIR" value="/root/PsychExtended/export/release" unless="debug" />
		<set name="BUILD_DIR" value="/root/PsychExtended/export/32bit" if="32bits" />
	</section>

	<classpath name="source" />
	<classpath name="source_nova" if="ENABLE_NOVA"/>
	<classpath name="library" />

	<!-- PSYCH EXTENDED CUSTOMIZATION -->
	
	<!-- || Mobile Defines || -->
	<define name="TOUCH_CONTROLS" if="mobile" />

	<!-- || Usele Defines || -->
	<define name="EXTRA_FPSCOUNTER" if="ENABLE_NOVA"/>

	<define name="EXTRA_FREEPLAY" if="ENABLE_NOVA"/>

	<define name="EXTRA_TRANSITIONS" if="ENABLE_NOVA"/>

	<define name="EXTRA_MAINMENU" if="ENABLE_NOVA"/>

	<define name="EXTRA_PAUSE" if="ENABLE_NOVA"/>

	<!-- Comment this out if you want to disable Modpacks (When Comment this out, you can't use most of the custom menus from mods) -->
	<define name="MODPACK_ALLOWED" />

	<!-- This won't included the full version of v1.0.2 -->
	<define name="CUSTOM_RESOLUTION_ALLOWED" if="debugBuild" />

	<!-- || Codename Engine Defines || -->

	<!-- Comment this out if you want to disable CNE Chart Converter (When Comment this out, you can't use CNE Charts in PsychExtended) -->
	<define name="CNE_CHART_ALLOWED" />

	<!-- Mimic the FLX_CNE_FORK value (It gives the warning but works) -->
	<define name="FLX_CNE_FORK" />

	<!-- Comment this out if you want to disable HScript Improved Scripts (Not Recommend) -->
	<define name="HSC_ALLOWED" />

	<!-- Allow to change states/substates with hscript -->
	<define name="SCRIPTING_ALLOWED" />

	<!-- Global Script shit, I'll write the desc later -->
	<define name="GLOBAL_SCRIPT" if="SCRIPTING_ALLOWED" />

	<!-- Comment this out to prevent extending classes in hscript.
		 Reduces compilation time at the cost of limited HScript flexibility. !-->
	<define name="CUSTOM_CLASSES" unless="STRIPPED_COMPILE" />

	<!-- PSYCH ENGINE CUSTOMIZATION -->
	<define name="MODS_ALLOWED" if="desktop || mobile" />

	<define name="HSCRIPT_ALLOWED" if="desktop || mobile" />

	<define name="DISCORD_ALLOWED" if="desktop" />

	<define name="LUA_ALLOWED" if="desktop || mobile" />

	<define name="ACHIEVEMENTS_ALLOWED" />

	<define name="VIDEOS_ALLOWED" if="web || windows || android" unless="32bits"/>

	<!-- DELETE THIS TO REMOVE WATERMARKS/DEV NAMES ON TITLE SCREEN -->
	<define name="PSYCH_WATERMARKS"/>

	<!-- DELETE THE if="officialBuild" for enabling this on an unofficial build -->
	<define name="TITLE_SCREEN_EASTER_EGG" if="officialBuild"/>

	<!-- Crash Handler Shit (Idk what it does, If you ask me it doesn't do anything) -->
	<define name="CRASH_HANDLER" if="desktop || mobile" />

	<assets path="assets/shared"        exclude="*.ogg" if="web"/>
	<assets path="assets/shared"        exclude="*.mp3" unless="web"/>
	<section if="TITLE_SCREEN_EASTER_EGG">
		<assets path="assets/secrets" rename="assets/shared" exclude="*.ogg" if="web"/>
		<assets path="assets/secrets" rename="assets/shared" exclude="*.mp3"  unless="web"/>
	</section>

	<!-- DONT ENABLE THIS -->
	<!--;<define name="CHECK_FOR_UPDATES" if="desktop officialBuild"/> -->

	<!-- PsychEngine Assets -->
	<assets path="assets/shared"        exclude="*.ogg" if="web"/>
	<assets path="assets/shared"        exclude="*.mp3" unless="web"/>
	<assets path="assets/videos"        if="VIDEOS_ALLOWED"/>
	<assets path="assets/songs"         exclude="*.ogg" if="web"/>
	<assets path="assets/songs"         exclude="*.mp3" unless="web"/>
	<assets path="assets/week_assets"   exclude="*.ogg" if="web"/>
	<assets path="assets/week_assets"   exclude="*.mp3" unless="web"/>

	<!-- Psych Extended Assets -->
	<section if="TOUCH_CONTROLS">
		<assets path="mobile"         rename="assets/shared/mobile"        exclude="*.ogg" if="web"/>
		<assets path="mobile"         rename="assets/shared/mobile"        exclude="*.mp3" unless="web"/>
	</section>

	<section if="ENABLE_NOVA">
		<assets path="assets_nova"         rename="assets"        exclude="*.ogg" if="web"/>
		<assets path="assets_nova"         rename="assets"        exclude="*.mp3" unless="web"/>
	</section>
	
	<library name="videos"        preload="true" />
	<library name="songs"         preload="true" />
	<library name="week_assets"   preload="true" />
	
	<section if="MODS_ALLOWED">
		<assets path='example_mods' rename='mods' embed='false'/>
		<assets path='example_modpack' rename='modpack' embed='false' />
	</section>
	<assets path='art/readme.txt' rename='do NOT readme.txt' if="desktop" />
	<!-- <template path='mods' /> -->
	
	<!-- assets path="CHANGELOG.md" rename='changelog.txt' -->

	<!-- NOTE FOR FUTURE SELF SINCE FONTS ARE ALWAYS FUCKY 
		TO FIX ONE OF THEM, I CONVERTED IT TO OTF. DUNNO IF YOU NEED TO
		THEN UHHH I USED THE NAME OF THE FONT WITH SETFORMAT() ON THE TEXT!!!
		NOT USING A DIRECT THING TO THE ASSET!!!
	-->
	<assets path="assets/fonts" />
	<!-- _______________________________ Libraries ______________________________ -->

	<haxelib name="flixel" />
	<haxedev set='webgl' />

	<!--In case you want to use the addons package-->
	<haxelib name="flixel-addons" />
	<haxelib name="hscript" />
	<define name="hscriptPos" />

	<!--In case you want to use the ui package-->
	<haxelib name="flixel-ui" />

	<haxelib name="linc_luajit" if="LUA_ALLOWED"/>

	<haxelib name="tjson"/> <!-- Haxe's json brokes the mods, so use tjson for them -->

	<haxelib name="hxCodec" if="VIDEOS_ALLOWED"/>

	<haxelib name="faxe" if='switch'/>

	<haxelib name="discord_rpc" if="desktop"/>

	<haxelib name="SScript" if="HSCRIPT_ALLOWED"/>

	<!-- Better Than SScript (Folders: `songs/scriptname.hsc` and `songs/songname/scripts/scriptname.hsc`) -->
	<haxelib name="hscript-improved" if="SCRIPTING_ALLOWED || HSC_ALLOWED"/>

	<!-- Extra packages-->
	<haxelib name="flxanimate" />
	<haxelib name="funkin.vis"/>
	<haxelib name="grig.audio" />

	<!-- <haxelib name="markdown" /> -->
	<!-- <haxelib name="HtmlParser" /> -->

	<!--In case you want to use nape with flixel-->
	<!--<haxelib name="nape-haxe4" />-->

	<!-- ______________________________ Haxedefines _____________________________ -->

	<!--Enable the Flixel core recording system-->
	<!--<haxedef name="FLX_RECORD" />-->

	<!--Disable the right and middle mouse buttons-->
	<!-- <haxedef name="FLX_NO_MOUSE_ADVANCED" /> -->

	<!--Disable the native cursor API on Flash-->
	<!--<haxedef name="FLX_NO_NATIVE_CURSOR" />-->

	<!--Optimise inputs, be careful you will get null errors if you don't use conditionals in your game-->
	<!-- <haxedef name="FLX_NO_MOUSE" if="mobile" /> -->
	<!-- <haxedef name="FLX_NO_KEYBOARD" if="mobile" /> -->
	<!-- <haxedef name="FLX_NO_TOUCH" if="desktop" /> -->
	<!--<haxedef name="FLX_NO_GAMEPAD" />-->

	<!--Disable the Flixel core sound tray-->
	<!--<haxedef name="FLX_NO_SOUND_TRAY" />-->

	<!--Disable the Flixel sound management code-->
	<!--<haxedef name="FLX_NO_SOUND_SYSTEM" />-->

	<!--Disable the Flixel core focus lost screen-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />

	<!--Allow working memory greater than 1 Gig-->
	<!--haxedef name="HXCPP_GC_BIG_BLOCKS"-->
	
	<!-- Show debug traces for hxCodec -->
	<haxedef name="HXC_DEBUG_TRACE" if="debug" />
	
	<!--Disable the Flixel core debugger. Automatically gets set whenever you compile in release mode!-->
	<haxedef name="FLX_NO_DEBUG" unless="debug" />

	<!--Enable this for Nape release builds for a serious peformance improvement-->
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />
	
	<!--Used for Izzy Engine's crash handler-->
	<section if="cpp">
		<haxedef name="HXCPP_CHECK_POINTER" />
		<haxedef name="HXCPP_STACK_LINE" />
		<haxedef name="HXCPP_STACK_TRACE" />
		<haxedef name="HXCPP_CATCH_SEGV" />
	</section>

	<!--Disable deprecated warnings-->
	<haxedef name='no-deprecation-warnings' />

	<!-- Haxe 4.3.0+: Enable pretty syntax errors and stuff. -->
	<!-- pretty (haxeflixel default), indent, classic (haxe compiler default) -->
	<haxedef name="message.reporting" value="pretty" />
	
	<!-- Allow Write Access to EXTERNAL_DATA Directory -->
	<haxedef name="SHARE_MOBILE_FILES" if="mobile" />
	
	<!-- Do whatever you want I'm tired uninstall and install everytime -->
	<certificate path="key.keystore" password="psychengine" alias="psychport" alias-password="psychengine" if="android" unless="debug" />

	<!-- <haxeflag name="--macro" value="macros.CreateMacroAbstractClass.init()" /> --> <!-- It's too buggy, If you fix this, send me the fixed one -->
	
	<haxedef name="DISABLED_MACRO_SUPERLATIVE" />

	<!-- _________________________________ Custom _______________________________ -->

	<!--Place custom nodes like icons here (higher priority to override the HaxeFlixel icon)-->
	
	<icon path="art/icon16.png" size='16'/>
	<icon path="art/icon32.png" size='32'/>
	<icon path="art/icon64.png" size='64'/>
	<icon path="art/iconOG.png" />
</project>
